<% layout("/layouts/boilerplate") %>
<body>
  <div class="row"></div>
    <div class="col-8 offset-2">
      <br><br>
      <h3 class="mt-3">Edit Listing</h3>
      <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
             value="<%= listing.title%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">title is required</div>
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Description</label>
          <textarea
            name="listing[description]"         
               class="form-control"
            required >
                   <%= listing.description%></textarea>
          <div class="invalid-feedback">short description is required</div>
        </div>

        <div class="mb-3">
          Current Listing Image <br>
          <img src="<%=listing.image.url.replace('/upload', '/upload/w_300,h_200') %>" alt="/img">
        </div>   
        <div class="mb-3">   
          <label for="form-label">Upload New Image</label>
          <input
            class="form-control"
            type="file"
            name="listing[image]"
            required
          />
        </div>

        <div class="row">
          <div class="mb-3 col-4">
            <label for="" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              value="<%= listing.price%>"
              class="form-control"
            required
            />
          <div class="invalid-feedback">write a valid price</div>

          </div>
          <div class="mb-3 col-8">
            <label for="" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              value="<%= listing.country%>"
              class="form-control"
            required
            />
          <div class="invalid-feedback">Enter the country</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="fo" class="form label">Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%= listing.location%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">enter the location</div>
        </div>
        <button class="btn mb-3 edit-btn">Edit</button>
        <br><br>
    </div>
  </div>
</body>
